<p id="notice"><%= notice %></p>

<h1>Listing Memos...<%= @yotei.count %></h1>

<table>
<tr>
<td><%= render :partial =>"cal", :locals => { weeks: @prev_month_weeks, year:@year, month:@month-1} %></td>
<td><%= render :partial =>"cal", :locals => { weeks: @curr_month_weeks, year:@year, month:@month} %></td>
<td><%= render :partial =>"cal", :locals => { weeks: @next_month_weeks, year:@year, month:@month+1} %></td>
</table>

</br>
<table>

  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.date.strftime("%m/%d")%><br><pre><%= memo.body %></pre></td>

     </tr>
     <tr>
        <td style="text-align:right;">
        <%= link_to  edit_memo_path(memo) do %><i class="glyphicon glyphicon-pencil"></i><% end %>
        <%= link_to  memo, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="glyphicon glyphicon-trash"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

